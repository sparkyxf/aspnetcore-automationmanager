@page "/"
@page "/dashboard"
@rendermode InteractiveServer
@using AutomationManager.Web.Services
@inject AgentTrackerService AgentTracker
@inject RealtimeService RealtimeService
@inject ScriptExecutionService ScriptService
@inject IJSRuntime JS
@implements IDisposable

<PageTitle>Dashboard - AutomationManager</PageTitle>

<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <h1 class="h2 mb-0">
                <i class="bi bi-speedometer2 me-2 text-primary"></i>Dashboard
            </h1>
            <div class="d-flex gap-2">
                <button class="btn btn-outline-primary btn-sm" @onclick="RefreshData">
                    <i class="bi bi-arrow-clockwise me-1"></i>Refresh
                </button>
                <div class="btn-group" role="group">
                    <input type="radio" class="btn-check" name="viewMode" id="gridView" checked @onchange="() => SetViewMode(true)">
                    <label class="btn btn-outline-secondary btn-sm" for="gridView">
                        <i class="bi bi-grid-3x3-gap"></i>
                    </label>
                    <input type="radio" class="btn-check" name="viewMode" id="listView" @onchange="() => SetViewMode(false)">
                    <label class="btn btn-outline-secondary btn-sm" for="listView">
                        <i class="bi bi-list-ul"></i>
                    </label>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-4">
        <div class="card text-center bg-primary text-white">
            <div class="card-body">
                <h5 class="card-title">Connected Agents</h5>
                <h2 class="display-4">@(agents?.Count(a => a.IsConnected) ?? 0)</h2>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-center bg-success text-white">
            <div class="card-body">
                <h5 class="card-title">Active Agents</h5>
                <h2 class="display-4">@(agents?.Count(a => a.Status == "Active") ?? 0)</h2>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-center bg-info text-white">
            <div class="card-body">
                <h5 class="card-title">Idle Agents</h5>
                <h2 class="display-4">@(agents?.Count(a => a.IsConnected && a.Status == "Idle") ?? 0)</h2>
            </div>
        </div>
    </div>
</div>

@if (isLoadingAgents)
{
    <div class="text-center py-5">
        <div class="loading-spinner"></div>
        <p class="mt-2 text-muted">Connecting to agent tracker...</p>
    </div>
}
else if (agents?.Any() == true)
{
    @if (isGridView)
    {
        <div class="row">
            @foreach (var agent in agents)
            {
                <div class="col-lg-6 col-xl-4 mb-4">
                    <div class="card agent-status-card @GetConnectionStatusClass(agent) h-100 card-hover fade-in">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h6 class="card-title mb-0">
                                <span class="status-indicator @GetStatusIndicatorClass(agent)"></span>
                                @agent.AgentName
                            </h6>
                            <small class="text-muted">@agent.LastMessageTime.ToLocalTime().ToString("HH:mm:ss")</small>
                        </div>
                        <div class="card-body">
                            @if (agent.Status == "Active")
                            {
                                <h6 class="text-success mb-2">
                                    <i class="bi bi-play-fill me-1"></i>Active
                                </h6>
                                <div class="execution-commands mb-3">
                                    @if (agent.PreviousCommands.Any())
                                    {
                                        @foreach (var cmd in agent.PreviousCommands.TakeLast(2))
                                        {
                                            <div class="execution-command previous">@cmd</div>
                                        }
                                    }
                                    @if (!string.IsNullOrEmpty(agent.CurrentCommand))
                                    {
                                        <div class="execution-command current">
                                            <i class="bi bi-arrow-right-circle-fill me-1"></i>@agent.CurrentCommand
                                        </div>
                                    }
                                    @if (agent.NextCommands.Any())
                                    {
                                        @foreach (var cmd in agent.NextCommands.Take(2))
                                        {
                                            <div class="execution-command next">@cmd</div>
                                        }
                                    }
                                </div>
                            }
                            else if (agent.IsConnected)
                            {
                                <p class="text-muted mb-0">
                                    <i class="bi bi-check-circle me-1"></i>Ready for automation
                                </p>
                            }
                            else
                            {
                                <p class="text-danger mb-0">
                                    <i class="bi bi-x-circle me-1"></i>Disconnected
                                </p>
                            }
                            
                            @if (agent.CursorX.HasValue && agent.CursorY.HasValue && agent.IsConnected)
                            {
                                <div class="cursor-position mt-2">
                                    <i class="bi bi-cursor me-1"></i>Cursor: (@agent.CursorX.Value:F0, @agent.CursorY.Value:F0)
                                </div>
                            }
                        </div>
                        <div class="card-footer bg-transparent">
                            <div class="btn-group w-100 btn-group-actions">
                                @if (agent.Status == "Active")
                                {
                                    <button class="btn btn-warning btn-sm" @onclick="() => PauseAgent(agent.AgentId)">
                                        <i class="bi bi-pause-fill"></i> Pause
                                    </button>
                                    <button class="btn btn-danger btn-sm" @onclick="() => StopAgent(agent.AgentId)">
                                        <i class="bi bi-stop-fill"></i> Stop
                                    </button>
                                }
                                else if (agent.IsConnected)
                                {
                                    <a href="/script-editor?agentId=@agent.AgentId" class="btn btn-primary btn-sm">
                                        <i class="bi bi-play-fill me-1"></i>Start Script
                                    </a>
                                }
                                else
                                {
                                    <button class="btn btn-secondary btn-sm" disabled>
                                        <i class="bi bi-x-circle me-1"></i>Offline
                                    </button>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0">Agent List</h6>
            </div>
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Status</th>
                            <th>Agent Name</th>
                            <th>Current Activity</th>
                            <th>Cursor Position</th>
                            <th>Last Seen</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var agent in agents)
                        {
                            <tr class="fade-in">
                                <td>
                                    <span class="status-indicator @GetStatusIndicatorClass(agent)"></span>
                                    @(agent.IsConnected ? "Connected" : "Disconnected")
                                </td>
                                <td>
                                    <strong>@agent.AgentName</strong>
                                </td>
                                <td>
                                    @if (agent.Status == "Active")
                                    {
                                        <span class="badge bg-success">Active</span>
                                        @if (!string.IsNullOrEmpty(agent.CurrentCommand))
                                        {
                                            <div class="text-monospace small mt-1">@agent.CurrentCommand</div>
                                        }
                                    }
                                    else if (agent.IsConnected)
                                    {
                                        <span class="badge bg-info">Idle</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Offline</span>
                                    }
                                </td>
                                <td>
                                    @if (agent.CursorX.HasValue && agent.CursorY.HasValue && agent.IsConnected)
                                    {
                                        <span class="cursor-position">(@agent.CursorX.Value:F0, @agent.CursorY.Value:F0)</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">â€”</span>
                                    }
                                </td>
                                <td>
                                    <small>@agent.LastMessageTime.ToLocalTime().ToString("MMM dd, HH:mm:ss")</small>
                                </td>
                                <td>
                                    @if (agent.Status == "Active")
                                    {
                                        <div class="btn-group btn-group-sm">
                                            <button class="btn btn-outline-warning" @onclick="() => PauseAgent(agent.AgentId)">
                                                <i class="bi bi-pause-fill"></i>
                                            </button>
                                            <button class="btn btn-outline-danger" @onclick="() => StopAgent(agent.AgentId)">
                                                <i class="bi bi-stop-fill"></i>
                                            </button>
                                        </div>
                                    }
                                    else if (agent.IsConnected)
                                    {
                                        <a href="/script-editor?agentId=@agent.AgentId" class="btn btn-outline-primary btn-sm">
                                            <i class="bi bi-play-fill"></i>
                                        </a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
}
else
{
    <div class="text-center py-5">
        <i class="bi bi-robot display-1 text-muted"></i>
        <h4 class="mt-3 text-muted">No Agents Connected</h4>
        <p class="text-muted">Start an AutomationManager Agent to see it here.</p>
        <p class="text-muted small">Agents will appear automatically when they connect via WebSocket.</p>
    </div>
}

@code {
    private IEnumerable<TrackedAgent>? agents;
    private bool isLoadingAgents = true;
    private bool isGridView = true;

    protected override async Task OnInitializedAsync()
    {
        // Subscribe to agent tracker changes
        AgentTracker.OnAgentsChanged += OnAgentsChanged;
        
        // Initial data load
        LoadAgents();
        isLoadingAgents = false;
        
        // Small delay to ensure service is ready, then trigger initial load
        await Task.Delay(100);
        LoadAgents();
    }

    private void LoadAgents()
    {
        agents = AgentTracker.GetAllAgents();
        StateHasChanged();
    }

    private async Task RefreshData()
    {
        LoadAgents();
        await Task.CompletedTask;
    }

    private void SetViewMode(bool gridView)
    {
        isGridView = gridView;
        StateHasChanged();
    }

    private string GetConnectionStatusClass(TrackedAgent agent)
    {
        if (!agent.IsConnected)
            return "disconnected";
        return agent.Status == "Active" ? "connected active" : "connected";
    }

    private string GetStatusIndicatorClass(TrackedAgent agent)
    {
        if (!agent.IsConnected)
            return "offline";
        return agent.Status == "Active" ? "online active" : "online";
    }

    private async Task PauseAgent(Guid agentId)
    {
        try
        {
            var success = await ScriptService.PauseAgentAsync(agentId);
            if (!success)
            {
                await JS.InvokeVoidAsync("console.error", "Failed to pause agent");
            }
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("console.error", $"Error pausing agent: {ex.Message}");
        }
    }

    private async Task StopAgent(Guid agentId)
    {
        try
        {
            var success = await ScriptService.StopAgentAsync(agentId);
            if (!success)
            {
                await JS.InvokeVoidAsync("console.error", "Failed to stop agent");
            }
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("console.error", $"Error stopping agent: {ex.Message}");
        }
    }

    private void OnAgentsChanged()
    {
        InvokeAsync(() =>
        {
            LoadAgents();
        });
    }

    public void Dispose()
    {
        // Unsubscribe from events
        AgentTracker.OnAgentsChanged -= OnAgentsChanged;
    }
}